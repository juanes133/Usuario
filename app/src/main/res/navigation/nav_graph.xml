<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/userFragment">

    <fragment
        android:id="@+id/userFragment"
        android:name="com.ceiba.pruebatecnica.usuarios.view.UsersFragment"
        android:label="Prueba de ingreso"
        tools:layout="@layout/fragment_users" >
        <action
            android:id="@+id/action_userFragment_to_postsFragment"
            app:destination="@id/postsFragment" />
    </fragment>
    <fragment
        android:id="@+id/postsFragment"
        android:name="com.ceiba.pruebatecnica.usuarios.view.PostsFragment"
        android:label="fragment_posts"
        tools:layout="@layout/fragment_posts" >
        <argument android:name="idposts" />
    </fragment>
</navigation>